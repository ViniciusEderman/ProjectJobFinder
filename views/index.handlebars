<div id="top-container" class="container fluid">
        <h1 id="main-title" class="text-center">Finder you job</h1>
        <p id="main-subtitle" class="text-center">This site has the purpose of helping people find their dream job</p>
        <form id="search-form" class="form-inline" action="/" method="GET">
            <div class="form-group col-md-10">
                <input type="text" class="form-control" id="job" name="job" placeholder="look for your vacancy">
                <input type="submit" value="Search" class="search">       
            </div>
        </form>
    </div>

<main>
        <div id="jobs-container" class="container">
            <div class="row">
                <div class="col-md-12">
                    {{#if search}}
                        <h2 id="job-list-title">Looking for jobs that contain: {{search}}</h2>
                    {{else}}
                        <h2 id="job-list-title">See ours vacancies on emphasis</h2>
                    {{/if}}
                    <ul id="job-list" class="list-group">
                        {{#each jobs}}
                            <li class="list-group-item {{#if dataValues.newJob }}new-job{{/if}}">
                                <p>{{dataValues.company}}</p>
                                <h2>{{dataValues.title}}</h2>
                                <p>R${{dataValues.salary}}</p>
                                <span class="new-job-label">New</span>
                                <a class="btn btn-primary" href="/jobs/view/{{dataValues.id}}">More details about this job</a>
                            </li>
                        {{/each}}  
                    </ul>
                </div>
            </div>
        </div>
</main>
